extends ../layout

block content
    h1 lista de autores
    if error 
        p(class="error")= error
    if data
        ul
            each author in data 
                    div(id="listado")
                        a(href="/author/"+author.author_id)= `${author.name} (${author.born})`
                        a(href=`/author/${author.author_id}/update`) 
                            button Editar

                        form(action=`/author/${author.author_id}/remove`, method="post") 
                            button(type="submit") Borrar


    a(href="/author/new")
        button Crear nuevo autor