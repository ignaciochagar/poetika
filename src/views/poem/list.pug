extends ../layout

block content
    h1 Lista de poemas
    if error 
        p(class="error")= error
    if data
        ul
            each poem in data 
                    div(id="listado")
                        a(href="/poem/"+poem.poem_id)= `${poem.poem_id} - ${poem.title} (${poem.author})`
                        a(href=`/poem/${poem.poem_id}/update`, method="post") 
                            button Editar

                        form(action=`/poem/${poem.poem_id}/remove`, method="post") 
                            button(type="submit") Borrar


    a(href="/poem/new")
        button Crear nuevo poema
