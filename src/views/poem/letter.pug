    h1 Lista de poemas por inicial

    h3= dataNone

    if error 
        p(class="error")= error
    if data
        ul
            each poem in data 
                div(id="listado")
                    a(href="/poem/"+poem[0])= poem[1]
                    a(href=`/poem/${poem[0]}/update`, method="post") 
                        button Editar

                    form(action=`/poem/${poem[0]}/remove`, method="post") 
                        button(type="submit") Borrar


    a(href="/poem/new")
        button Crear nuevo poema